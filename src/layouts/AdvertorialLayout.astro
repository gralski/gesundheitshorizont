---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  titleHighlight?: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  author: string;
  authorRole?: string;
  authorAvatar?: string;
  readingTime?: string;
  rating?: string;
  ratingCount?: string;
  ctaText?: string;
  ctaUrl?: string;
  tags?: string[];
  sidebarTitle?: string;
  sidebarDescription?: string;
  sidebarCta?: string;
  sidebarCtaUrl?: string;
  sidebarImage?: string;
}

const {
  title,
  titleHighlight,
  description,
  pubDate,
  heroImage,
  author,
  authorRole = "Facharzt für Dermatologie",
  authorAvatar,
  readingTime = "8 Min",
  rating = "4.8",
  ratingCount = "12.000+",
  ctaText = "Jetzt entdecken",
  ctaUrl = "#",
  tags = ["#Hautgesundheit", "#AntiAging", "#Wissenschaft"],
  sidebarTitle,
  sidebarDescription,
  sidebarCta,
  sidebarCtaUrl,
  sidebarImage
} = Astro.props;

const formattedDate = pubDate.toLocaleDateString('de-DE', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<BaseLayout title={title} description={description} image={heroImage}>

  <!-- Sticky Top Banner -->
  <div class="sticky top-0 z-50 bg-primary text-white py-2.5 px-4 text-center">
    <div class="flex items-center justify-center gap-3 text-sm sm:text-base">
      <span class="font-medium">Entdecken Sie strahlende Haut</span>
      <a
        href={ctaUrl}
        class="inline-flex items-center px-4 py-1.5 bg-white text-primary font-bold text-xs sm:text-sm rounded hover:bg-gray-100 transition-colors uppercase tracking-wide"
      >
        Jetzt ansehen
      </a>
    </div>
  </div>

  <article class="bg-white">

    <!-- Dark Hero Section -->
    <div class="bg-slate-800 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">

        <!-- Verified Badge -->
        <div class="flex items-center gap-2 mb-6">
          <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm text-slate-300">Basierend auf verifizierten Kundenerfahrungen</span>
        </div>

        <!-- Author & Date -->
        <div class="flex items-center gap-3 mb-6">
          {authorAvatar ? (
            <img
              src={authorAvatar}
              alt={author}
              class="w-12 h-12 rounded-full object-cover border-2 border-slate-600"
            />
          ) : (
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center">
              <span class="text-white text-lg font-semibold">
                {author.charAt(0).toUpperCase()}
              </span>
            </div>
          )}
          <div>
            <p class="text-sm text-slate-400">Von <span class="text-white font-medium">{author}</span></p>
            <p class="text-xs text-slate-500">Aktualisiert am {formattedDate}</p>
          </div>
        </div>

        <!-- Main Headline with Highlight -->
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold leading-tight mb-5">
          <span set:html={title.replace(titleHighlight || '', `<span class="text-primary">${titleHighlight || ''}</span>`)} />
        </h1>

        <!-- Description -->
        <p class="text-base sm:text-lg text-slate-300 leading-relaxed mb-6 max-w-2xl">
          {description}
        </p>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag) => (
            <span class="px-3 py-1.5 bg-slate-700 text-slate-300 text-xs font-medium rounded">
              {tag}
            </span>
          ))}
        </div>

        <!-- Hero Image -->
        {heroImage && (
          <div class="rounded-xl overflow-hidden">
            <img
              src={heroImage}
              alt={title}
              class="w-full h-auto object-cover"
            />
          </div>
        )}

      </div>
    </div>

    <!-- White Content Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 lg:py-14">
      <div class="lg:grid lg:grid-cols-12 lg:gap-12">

        <!-- Main Content Column -->
        <div class="lg:col-span-8">

          <!-- Article Content -->
          <div class="prose max-w-none">
            <slot />
          </div>

          <!-- Bottom Author Card -->
          <div class="mt-12 p-6 bg-gray-50 rounded-xl">
            <div class="flex items-start gap-4">
              {authorAvatar ? (
                <img
                  src={authorAvatar}
                  alt={author}
                  class="w-16 h-16 rounded-full object-cover"
                />
              ) : (
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center flex-shrink-0">
                  <span class="text-white text-2xl font-semibold">
                    {author.charAt(0).toUpperCase()}
                  </span>
                </div>
              )}
              <div>
                <p class="text-xs uppercase tracking-wider text-gray-400 mb-1">Verfasst von</p>
                <p class="font-semibold text-lg text-gray-900">{author}</p>
                <p class="text-sm text-gray-600 mt-2">
                  {authorRole} mit über 20 Jahren klinischer Erfahrung in der dermatologischen Praxis.
                </p>
              </div>
            </div>
          </div>

        </div>

        <!-- Sidebar Column -->
        <aside class="lg:col-span-4 mt-10 lg:mt-0">
          <div class="lg:sticky lg:top-20">

            <!-- Promotional Card -->
            <div class="bg-slate-800 rounded-xl overflow-hidden text-white">
              {sidebarImage ? (
                <div class="p-6 pb-0">
                  <img
                    src={sidebarImage}
                    alt={sidebarTitle || "Promotion"}
                    class="w-full h-auto rounded-lg"
                  />
                </div>
              ) : (
                <div class="p-6 pb-0">
                  <div class="aspect-square bg-slate-700 rounded-lg flex items-center justify-center">
                    <svg class="w-20 h-20 text-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  </div>
                </div>
              )}

              <div class="p-6">
                <h3 class="text-xl font-bold mb-3">
                  {sidebarTitle || "Entdecken Sie mehr"}
                </h3>
                <p class="text-slate-300 text-sm leading-relaxed mb-6">
                  {sidebarDescription || "Erfahren Sie mehr über unsere Produkte und wie sie Ihnen zu einem gesünderen Leben verhelfen können."}
                </p>
                <a
                  href={sidebarCtaUrl || "#"}
                  class="inline-flex items-center justify-center w-full px-6 py-3 bg-primary hover:bg-primary-dark text-white font-semibold rounded-lg transition-colors"
                >
                  {sidebarCta || "Mehr erfahren"}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>

          </div>
        </aside>

      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .font-serif {
    font-family: Georgia, Cambria, 'Times New Roman', Times, serif;
  }
</style>
